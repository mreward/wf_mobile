{
  "name": "vue-polyglot",
  "version": "0.2.3",
  "description": "basic translation plugin for VueJS 2+",
  "keywords": [
    "vue",
    "vuejs",
    "polyglot",
    "vue-polyglot",
    "vuepolyglot",
    "locales",
    "i18n",
    "translation"
  ],
  "license": "MIT",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/polyglot.js",
  "repository": "guillaumevincent/vue-polyglot",
  "scripts": {
    "precommit": "npm test",
    "prepush": "npm test",
    "build": "rm -rf dist && rollup --config rollup.config.js && npm run build:min",
    "build:min": "uglifyjs --compress --mangle --output dist/polyglot.min.js -- dist/polyglot.js",
    "test": "BABEL_ENV=test ava test",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "axios": "^0.15.3"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "husky": "^0.13.3",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "uglify-js": "^2.8.16"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@ava/stage-4"
        ]
      }
    },
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  }
}
